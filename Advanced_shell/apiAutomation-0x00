#!/bin/bash

# Task 0: Fetch Pikachu data from Pokemon API
URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT="data.json"
ERROR_FILE="errors.txt"

# Make request
curl -s -o "$OUTPUT" "$URL"

# Check if curl succeeded
if [ $? -ne 0 ] || [ ! -s "$OUTPUT" ]; then
    echo "Failed to fetch data for Pikachu" >> "$ERROR_FILE"
    exit 1
fi